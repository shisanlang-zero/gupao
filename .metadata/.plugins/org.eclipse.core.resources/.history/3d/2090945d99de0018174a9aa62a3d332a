package com.gupao.netty.server;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;

/**
  * 业务处理了逻辑操作类
 * @author Administrator
 *
 */
public class BioServerHandler implements Runnable {
	
	private Socket socket;

	public BioServerHandler(Socket socket) {
		this.socket = socket;
	}

	public void run() {
		//输入对象
        BufferedReader in = null;
        //输出对象
        PrintWriter out = null;
        
        
        try {
        	//获取客户端请求的信息。
        	in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
			out = new PrintWriter(socket.getOutputStream());
			
			String acceptInfo = null;
			String resultInfo;
			//读取信息
			while (true) {
//				acceptInfo = in.readLine();
				if((acceptInfo = in.readLine()) == null) {
					break;
				}
				System.out.println("服务器端接收到信息：" + acceptInfo);
				//处理读取信息之后返回给客户端(可以单独service去处理，此处为方便虚拟处理)
				System.out.println("服务器端开始处理信息！！！！！");
				resultInfo = "信息已经处理：" + acceptInfo;
				System.out.println("服务器端处理的结果为：" + resultInfo);
				out.println(resultInfo);
			}
			
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				if(in != null) {
					in.close();
					in = null;
				}
				
				if(out != null) {
					out.close();
					out = null;
				}
				
				if(socket != null) {
					socket.close();
					socket = null;
				}

			} catch (IOException e) {
				e.printStackTrace();
			}
		}

	}

}
